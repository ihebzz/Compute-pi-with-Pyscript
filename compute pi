print("Let's compute Ï€:")
def wallis(n):
    pi = 2
    for i in range(1,n):
        pi *= 4 * i **2 / (4 * i ** 2 - 1)
    return pi

pi = wallis(100000)
s = f"n is approximately {pi:.3f}"
print(s)



  </py-script>


